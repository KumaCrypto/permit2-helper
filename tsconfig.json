{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "node",

		"rootDir": "./src",
		"outDir": "./dist",

		"strict": true,
		"esModuleInterop": true,

		"forceConsistentCasingInFileNames": true,

		"declaration": true,
		"declarationDir": "./dist/types",

		"sourceMap": true,
		"declarationMap": true,

		"skipLibCheck": true
	},

	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
